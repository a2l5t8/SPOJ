#include <cstdio>
#include <algorithm>
#include <ctime>

using namespace std;

int main() {
    srand( time( NULL ) );
    freopen("test.in","wt",stdout);
    int T = 3;
    printf("%d\n", T );
    while( T-- ) {
        int N = 500000, Q = rand() % 5000 + 1;
        printf("%d %d\n", N, Q );
        for( int i = 1; i <= N; i++ ) {
            int u = 500;
            printf("%d %d\n", i - 1 );
        }
        for( int i = 1; i <= Q; i++ ) {
            int u = rand() % 2 + 1, v = rand() % N + 1;
            printf("%d %d\n", u, v );
        }
    }
    return 0;
}
