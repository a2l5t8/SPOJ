#include <iostream>
#include <algorithm>
#include <map>
#include <vector>
#include <string>
#include <functional>

using namespace std;

int main(void)
{
	string a;
	while ( a != "Q" ) {
		cin >> a;
		int ans=0;
		vector<pii> pts;
		map< pii ,int> grid;
		int x=0,y=0;
		pts.push_back((pii) { x,y} );
		grid[(pii) { x,y} ]++;
		for(int i=0; i<a.length()-1; i++) {
			if(a[i]=='U') y++;
			else if(a[i]=='R') x++;
			else if(a[i]=='L') x--;
			else if(a[i]=='D') y--;
			pts.push_back((pii) { x,y} );
			grid[(pii) { x,y } ]++;
		}
		for(int i=0; i<pts.size(); i++) {
			if(grid[pts[i]]>1) ans++;
		}
		cout << ans/2 << endl;
	}
	return 0;
}
