#include <cstdio>
#include <utility>
#include <algorithm>
#include <vector>
#include <cstdlib>
 
#define MIN_VAL		0
#define MAX_N		10100

using namespace std;

int main(void)	{
	int testcases;
	scanf("%d", &testcases); 
 	while(testcases--)	{
		int N, tmp;
		scanf("%d", &N);
		pair<int, int> input[ N + 1 ];
		int solutions[ N + 1 ];
		for(int i = 1; i <= N; i++)	{
			scanf("%d", &tmp);
			input[i].first = tmp + 1001;
		}
		for(int i = 1; i <= N; i++)	{
			scanf("%d", &tmp );
			input[ i ].second = tmp + 1001;
		}
		sort(input + 1, input + N + 1 ); 		
		int tmp_max = MIN_VAL, global_max = 0;
		solutions[0] = 0;
		for(int i = 1; i <= N; i++)	{
			tmp_max = 0;
			solutions[ i ] = 0;
			for(int j = 0; j < i; j++)	{
	 			if( input[i].second >= input[j].second)
					tmp_max = max(tmp_max, solutions[j] + 1);
			}
			printf("solutions[ %d ]=  %d\n", i, solutions[ i ] );
			solutions[i] = max(tmp_max, solutions[i]);
			global_max = max(global_max, solutions[i]);
		}
		printf("%d\n", global_max );
	}
	return 0;
}
