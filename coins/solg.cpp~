#include <map>
#include <cstdio>
#include <cstdlib>
 
using namespace std;
 
map< int, long long > dp;
 
long long solve(int x) {
	if(dp.find(x) != dp.end()) return dp[ x ];
	return dp[ x ] = max( solve(x/2) + solve(x/3) + solve(x/4), ( long long )x); 
}
 
int main(void)	{
		int tmp, N;
 		dp[ 0 ] = 0;
		dp[ 1 ] = 1;
		while( scanf("%d", &tmp ) != EOF ) printf("%lld\n", solve( tmp ));
 		return 0;
}
