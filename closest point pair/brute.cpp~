#include <cstdio>
#include <cmath>
#include <algorithm>

#define INF 10000000000LL

using namespace std;

struct pt {
        int x,y,idx;
};

long long D( pt a, pt b )
{
        return ( long long )( a.x - b.x ) * ( a.x - b.x ) + ( long long )( a.y - b.y ) * ( a.y - b.y );
}

int main( void )
{
	//freopen("test.in","rt",stdin);
	int N, a, b;
	long long mindist = INF;
        scanf("%d", &N );
	pt P[ N ];
        for( int i = 0; i < N; i++ ) {
                scanf("%d%d", &P[ i ].x, &P[ i ].y );
                P[ i ].idx = i;
        }
	for( int i = 0; i < N; i++ ) {
		for( int j = i + 1; j < N; j++ ) {
			if( D( P[ i ], P[ j ] ) < mindist ) {
				mindist = D( P[ i ], P[ j ] );
				a = i;
				b = j;
			}
		}
	}
	printf("%d %d %0.6lf\n", a,b, sqrt( mindist ) );
	return 0;
}
